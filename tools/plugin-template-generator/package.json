{
  "name": "@core-erp/plugin-template-generator",
  "version": "1.0.0",
  "description": "Interactive CLI tool to generate Core ERP plugin templates",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "generate-plugin": "./dist/index.js"
  },
  "scripts": {
    "start": "node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "dev": "node --loader ts-node/esm --watch src/index.ts"
  },
  "keywords": [
    "core-erp",
    "plugin",
    "generator",
    "template",
    "cli"
  ],
  "author": "Core ERP",
  "license": "PROPRIETARY",
  "dependencies": {
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.16.5",
    "typescript": "^5.8.3",
    "ts-node": "^10.9.2"
  }
}
